                          
<%= provide(:title, 'انشاء حساب') %>
<h1>تسجيل الدخول</h1>

<div class="well form-inline">
<%= form_for @user do |f| %>
    <%= render 'shared/error_messages', :object=> f.object %>
<div id="wrapper">
<div id="login" class="animate form">
  <p>
    <%= f.label :"اسم المستخدم", :class => "uname"%><br />
    <%= f.text_field :name %>
  </p>	

  <p>
    <%= f.label :"البريدالالكتروني", :class => "uname"%><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :"كلمة السر" %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :"تأكيد كلمة السر" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p class="btn btn-large btn-primary"><%= f.submit "قم بانشاء حسابي"%></p>
</div>
</div>
<% end %>
</div>
</div>
